{
  "kind": "collectionType",
  "collectionName": "helicopters",
  "info": {
    "singularName": "helicopter",
    "pluralName": "helicopters",
    "displayName": "Helicopter",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "year": {
      "type": "string",
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "price": {
      "type": "decimal"
    },
    "currency": {
      "type": "enumeration",
      "enum": ["USD", "RUB"],
      "default": "USD"
    },
    "location": {
      "type": "string",
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "apu": {
      "type": "text",
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "description": {
      "type": "richtext",
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "status": {
      "type": "enumeration",
      "enum": ["for_sale", "sold"],
      "default": "for_sale"
    },
    "engines": {
      "type": "component",
      "repeatable": true,
      "component": "specs.engine"
    },
    "components": {
      "type": "component",
      "repeatable": true,
      "component": "specs.component"
    },
    "photos": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"],
      "pluginOptions": { "i18n": { "localized": false } }
    }
  }
}
